# Auto detect text files and perform LF normalization
* text=auto
.gitmodules eol=lf
.gitignore eol=lf
.gitattributes eol=lf
*.html eol=lf
*.js eol=lf
*.json eol=lf

# (binary is a macro for -text -diff)
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.mov binary
*.mp4 binary
*.mp3 binary
*.flv binary
*.fla binary
*.swf binary
*.gz binary
*.zip binary
*.7z binary
*.ttf binary
*.eot binary
*.woff binary
*.pyc binary
*.pdf binary
*.ez binary
*.bz2 binary
*.swp binary
*.svg binary
